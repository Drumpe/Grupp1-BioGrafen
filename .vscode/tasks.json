{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/webapi/webapi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/webapi/webapi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/webapi/webapi.csproj",
                "&"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "npm",
            "command": "npm",
            "type": "shell",
            "args": [
                "run",
                "dev",
                "--prefix",
                "${workspaceFolder}/WebReact"
            ],
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "run",
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            },
            "problemMatcher": "$msCompile",
            "dependsOn": [ "watch", "npm" ]
        }
    ]
}